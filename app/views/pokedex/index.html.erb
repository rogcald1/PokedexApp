<h2>Welcome to your new Pokedex!</h2>

<div class="error-alert">
      <% if flash[:alert] %>
        <div class="alert-warning"><%= flash[:alert] %></div>
      <% end %>
</div>

<div class="search-container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :pokemon, 'Search by name or ID ' %>
            <br/>
            <%= text_field_tag :pokemon, nil, placeholder: 'Eg. Squirtle or 7', class: 'form-control' %>
          </div>

          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>